<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="918.0" stylesheets="@css/styles.css" xmlns:fx="http://javafx.com/fxml/"
            fx:controller="org.un.sdgs.terratales.FavoritesController">
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <left>
            <Label text="TerraTales" BorderPane.alignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </left>
         <right>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
               <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true"/>
               <Label fx:id="userLabel" text="ProfileName"/>
               <Button mnemonicParsing="false" onAction="#onSignoutPress" styleClass="button1">
                  <HBox.margin>
                     <Insets left="20.0"/>
                  </HBox.margin>
                  <graphic>
                     <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@icons/logout_active.png"/>
                     </ImageView>
                  </graphic>
               </Button>
            </HBox>
         </right>
         <padding>
            <Insets left="100.0" right="100.0" />
         </padding>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </BorderPane>
   </top>
   <left>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <Button mnemonicParsing="false" onAction="#onLocationPress" styleClass="button1">
            <graphic>
               <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@icons/place_inactive.png"/>
               </ImageView>
            </graphic>
         </Button>
         <Button mnemonicParsing="false" onAction="#onMapPress" styleClass="button1">
            <graphic>
               <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@icons/map_inactive.png"/>
               </ImageView>
            </graphic>
         </Button>
         <Button mnemonicParsing="false" styleClass="button1">
            <graphic>
               <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@icons/bookmark_active.png"/>
               </ImageView>
            </graphic>
         </Button>
      </VBox>
   </left>
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <ImageView fx:id="locationImage" fitHeight="345.0" fitWidth="504.0" layoutX="276.0" layoutY="27.0"
                    pickOnBounds="true">
            <Image url="@locations/Amazon Rainforest.jpg"/>
         </ImageView>
         <Label fx:id="descriptionLabel" layoutX="275.0" layoutY="388.0" prefHeight="191.0" prefWidth="508.0"
                text="Description of Place" textFill="#326e2c" wrapText="true">
            <font>
               <Font size="19.0"/>
            </font>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
         </Label>
         <VBox layoutX="303.0" layoutY="52.0" prefHeight="234.0" prefWidth="459.0">
            <Label fx:id="nameLabel" alignment="TOP_LEFT" prefHeight="129.0" prefWidth="459.0" text="Name of Place"
                   textFill="WHITE" wrapText="true">
               <font>
                  <Font name="System Bold" size="41.0"/>
               </font>
            </Label>
            <Label fx:id="placeLabel" alignment="TOP_LEFT" prefHeight="90.0" prefWidth="346.0"
                   text="Location of Place" textFill="WHITE" wrapText="true">
               <font>
                  <Font name="System Bold Italic" size="25.0"/>
               </font>
            </Label>
         </VBox>
         <ScrollPane fitToHeight="true" fitToWidth="true" layoutX="21.0" layoutY="52.0" prefHeight="567.0"
                     prefWidth="241.0">
            <VBox fx:id="favoritesVbox"/>
         </ScrollPane>
         <Label alignment="CENTER" contentDisplay="CENTER" layoutX="23.0" layoutY="14.0" prefHeight="27.0"
                prefWidth="237.0" text="Favorites">
            <font>
               <Font size="18.0"/>
            </font>
         </Label>
      </AnchorPane>
   </center>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</BorderPane>
